@{
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Edit", "Inspector", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewInspector.InspectorFirst)
                    @Html.TextBoxFor(Model => Model.NewInspector.InspectorFirst, new { @class = "form-control" })
                    <span asp-validation-for="@Model.NewInspector.InspectorFirst" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewInspector.InspectorLast)
                    @Html.TextBoxFor(Model => Model.NewInspector.InspectorLast, new { @class = "form-control" })
                    <span asp-validation-for="@Model.NewInspector.InspectorLast" class="text-danger"></span>
                </div>
                <div class="form-group">
