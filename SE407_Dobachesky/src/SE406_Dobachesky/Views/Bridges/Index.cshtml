@model SE406_Dobachesky.BridgesViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Index", "Bridges", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewBridges.MaterialDesignId)
                    @Html.TextBoxFor(Model => Model.NewBridges.MaterialDesignId,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewBridges.ConstructionDesignId)
                    @Html.TextBoxFor(Model => Model.NewBridges.ConstructionDesignId,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewBridges.FunctionalClassId)
                    @Html.TextBoxFor(Model => Model.NewBridges.FunctionalClassId,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewBridges.StatusId)
                    @Html.TextBoxFor(Model => Model.NewBridges.StatusId,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewBridges.CountyId)
                    @Html.TextBoxFor(Model => Model.NewBridges.CountyId,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewBridges.NbiNumber)
                    @Html.TextBoxFor(Model => Model.NewBridges.NbiNumber, 
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewBridges.Rating)
                    @Html.TextBoxFor(Model => Model.NewBridges.Rating,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewBridges.RouteNumber)
                    @Html.TextBoxFor(Model => Model.NewBridges.RouteNumber,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewBridges.City)
                    @Html.TextBoxFor(Model => Model.NewBridges.City,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewBridges.IntersectingFeature)
                    @Html.TextBoxFor(Model => Model.NewBridges.IntersectingFeature,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewBridges.CarriedFeature)
                    @Html.TextBoxFor(Model => Model.NewBridges.CarriedFeature,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewBridges.Location)
                    @Html.TextBoxFor(Model => Model.NewBridges.Location,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewBridges.Built)
                    @Html.TextBoxFor(Model => Model.NewBridges.Built,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewBridges.Reconstructed)
                    @Html.TextBoxFor(Model => Model.NewBridges.Reconstructed,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewBridges.TotalLength)
                    @Html.TextBoxFor(Model => Model.NewBridges.TotalLength,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-md" />
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2>List of Bridges:</h2>
            <div class="container-fluid">
                <table class="table table-striped table-responsive">
                    <thead>
                        <tr>
                            <th>Bridge Id</th>
                            <th>Material Design Id</th>
                            <th>Construction Design Id</th>
                            <th>Functional Class Id</th>
                            <th>Status Id</th>
                            <th>County Id</th>
                            <th>Nbi Number</th>
                            <th>Rating</th>
                            <th>Route Number</th>
                            <th>City</th>
                            <th>Intersecting Feature</th>
                            <th>Carried Feature</th>
                            <th>Location</th>
                            <th>Built</th>
                            <th>Reconstructed</th>
                            <th>Total Length</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Bridge in Model.BridgesList)
                        {
                            <tr>
                                <td>@Bridge.BridgeId</td>
                                <td>@Bridge.MaterialDesignId</td>
                                <td>@Bridge.ConstructionDesignId</td>
                                <td>@Bridge.FunctionalClassId</td>
                                <td>@Bridge.StatusId</td>
                                <td>@Bridge.CountyId</td>
                                <td>@Bridge.NbiNumber</td>
                                <td>@Bridge.Rating</td>
                                <td>@Bridge.RouteNumber</td>
                                <td>@Bridge.City</td>
                                <td>@Bridge.IntersectingFeature</td>
                                <td>@Bridge.CarriedFeature</td>
                                <td>@Bridge.Location</td>
                                <td>@Bridge.Built</td>
                                <td>@Bridge.Reconstructed</td>
                                <td>@Bridge.TotalLength</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>