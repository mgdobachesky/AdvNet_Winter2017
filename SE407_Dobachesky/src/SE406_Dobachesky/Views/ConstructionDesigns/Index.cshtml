@{
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Index", "ConstructionDesigns", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewConstructionDesigns.ConstructionDesignType)
                    @Html.TextBoxFor(Model => Model.NewConstructionDesigns.ConstructionDesignType,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-md" />
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2>List of Construction Designs:</h2>
            <div class="table-responsive">
                <table class="table table-striped">
                    <tr>
                        <th>Construction Design Id</th>
                        <th>Construction Design Type</th>
                    </tr>
                    @foreach (var ConstructionDesign in Model.ConstructionDesignsList)
                    {
                        <tr>@ConstructionDesign.ConstructionDesignId</tr>
                        <tr>@ConstructionDesign.ConstructionDesignType</tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>