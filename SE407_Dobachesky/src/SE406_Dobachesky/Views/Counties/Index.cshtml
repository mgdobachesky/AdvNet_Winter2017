@{
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Index", "Counties", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewCounties.CountyName)
                    @Html.TextBoxFor(Model => Model.NewCounties.CountyName,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-md" />
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2>List of Counties:</h2>
            <div class="table-responsive">
                <table class="table table-striped">
                    <tr>
                        <th>County Id</th>
                        <th>County Name</th>
                    </tr>
                    @foreach (var County in Model.CountiesList)
                    {
                        <tr>@County.CountyId</tr>
                        <tr>@County.CountyName</tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>