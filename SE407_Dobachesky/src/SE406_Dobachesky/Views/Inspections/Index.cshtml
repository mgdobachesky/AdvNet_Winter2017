@model SE406_Dobachesky.InspectionsViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Index", "Inspections", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewInspections.BridgeId)
                    @Html.TextBoxFor(Model => Model.NewInspections.BridgeId,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewInspections.InspectorId)
                    @Html.TextBoxFor(Model => Model.NewInspections.InspectorId,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewInspections.InspectionDate)
                    @Html.TextBoxFor(Model => Model.NewInspections.InspectionDate,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewInspections.DeckInspectoinCodeId)
                    @Html.TextBoxFor(Model => Model.NewInspections.DeckInspectoinCodeId,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewInspections.SuperstructureInspectionCodeId)
                    @Html.TextBoxFor(Model => Model.NewInspections.SuperstructureInspectionCodeId,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewInspections.SubstructureInspectionCodeId)
                    @Html.TextBoxFor(Model => Model.NewInspections.SubstructureInspectionCodeId,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewInspections.InspectionNotes)
                    @Html.TextBoxFor(Model => Model.NewInspections.InspectionNotes,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-md" />
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2>List of Inspections:</h2>
            <div class="container-fluid">
                <table class="table table-striped table-responsive">
                    <thead>
                        <tr>
                            <th>Inspection Id</th>
                            <th>Bridge Id</th>
                            <th>Inspector Id</th>
                            <th>Inspection Date</th>
                            <th>Deck Inspection Code Id</th>
                            <th>Super Structure Inspection Code Id</th>
                            <th>Sub Structure Inspection Code Id</th>
                            <th>Inspection Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Inspection in Model.InspectionsList)
                        {
                            <tr>
                                <td>@Inspection.InspectionId</td>
                                <td>@Inspection.BridgeId</td>
                                <td>@Inspection.InspectorId</td>
                                <td>@Inspection.InspectionDate</td>
                                <td>@Inspection.DeckInspectoinCodeId</td>
                                <td>@Inspection.SuperstructureInspectionCodeId</td>
                                <td>@Inspection.SubstructureInspectionCodeId</td>
                                <td>@Inspection.InspectionNotes</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>