@model SE406_Dobachesky.InspectorsViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Index", "Inspectors", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewInspectors.InspectorFirst)
                    @Html.TextBoxFor(Model => Model.NewInspectors.InspectorFirst,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewInspectors.InspectorLast)
                    @Html.TextBoxFor(Model => Model.NewInspectors.InspectorLast,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewInspectors.InspectorOrg)
                    @Html.TextBoxFor(Model => Model.NewInspectors.InspectorOrg,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewInspectors.InspectorCertEffective)
                    @Html.TextBoxFor(Model => Model.NewInspectors.InspectorCertEffective,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewInspectors.InspectorCertExpires)
                    @Html.TextBoxFor(Model => Model.NewInspectors.InspectorCertExpires,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-md" />
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2>List of Inspectors:</h2>
            <div class="table-responsive">
                <table class="table table-striped">
                    <tr>
                        <th>Inspector Id</th>
                        <th>Inspector First Name</th>
                        <th>Inspector Last Name</th>
                        <th>Inspector Orginization</th>
                        <th>Inspector Certification Effective</th>
                        <th>Inspector Certification Expires</th>
                    </tr>
                    @foreach (var Inspector in Model.InspectorsList)
                    {
                        <tr>@Inspector.InspectorId</tr>
                        <tr>@Inspector.InspectorFirst</tr>
                        <tr>@Inspector.InspectorLast</tr>
                        <tr>@Inspector.InspectorOrg</tr>
                        <tr>@Inspector.InspectorCertEffective</tr>
                        <tr>@Inspector.InspectorCertExpires</tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>