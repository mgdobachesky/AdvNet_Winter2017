@{
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Index", "MaintenanceActions", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewMaintenanceActions.MaintenanceActionName)
                    @Html.TextBoxFor(Model => Model.NewMaintenanceActions.MaintenanceActionName,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-md" />
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2>List of Maintenance Actions:</h2>
            <div class="table-responsive">
                <table class="table table-striped">
                    <tr>
                        <th>MaintenanceAction Id</th>
                        <th>MaintenanceAction Name</th>
                    </tr>
                    @foreach (var MaintenanceAction in Model.MaintenanceActionsList)
                    {
                        <tr>@MaintenanceAction.MaintenanceActionId</tr>
                        <tr>@MaintenanceAction.MaintenanceActionName</tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>