@{
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Index", "StatusCodes", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewStatusCodes.StatusName)
                    @Html.TextBoxFor(Model => Model.NewStatusCodes.StatusName,
                        new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-md" />
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2>List of Status Codes:</h2>
            <div class="table-responsive">
                <table class="table table-striped">
                    <tr>
                        <th>Status Id</th>
                        <th>Status Name</th>
                    </tr>
                    @foreach (var StatusCode in Model.StatusCodesList)
                    {
                        <tr>@StatusCode.StatusId</tr>
                        <tr>@StatusCode.StatusName</tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>