@{
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Index", "FunctionalClass", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewFunctionalClass.FunctionalClassType)
                    @Html.TextBoxFor(Model => Model.NewFunctionalClass.FunctionalClassType, new { @class = "form-control" })
                    <span asp-validation-for="@Model.NewFunctionalClass.FunctionalClassType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-md" />
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2>List of Functional Classes:</h2>
            <div class="container-fluid">
                <table class="table table-striped table-responsive">
                    <thead>
                        <tr>
                            <th>Functional Class Id</th>
                            <th>Functional Class Type</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var FunctionalClass in Model.FunctionalClassesList)
                        {
                            <tr>
                                <td>@FunctionalClass.FunctionalClassId</td>
                                <td>@FunctionalClass.FunctionalClassType</td>
                                <td><a asp-action="Edit" asp-route-id="@FunctionalClass.FunctionalClassId">Edit</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>