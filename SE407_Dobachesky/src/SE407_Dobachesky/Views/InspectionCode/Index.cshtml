@model SE407_Dobachesky.InspectionCodeViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@if (TempData["ResultMessage"] != null)
{
    <p class="alert alert-success" id="successMessage">@TempData["ResultMessage"]</p>
    <br />
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Index", "InspectionCode", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewInspectionCode.InspectionCodeName)
                    @Html.TextBoxFor(Model => Model.NewInspectionCode.InspectionCodeName, new { @class = "form-control" })
                    <span asp-validation-for="@Model.NewInspectionCode.InspectionCodeName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewInspectionCode.InspectionCodeDesc)
                    @Html.TextBoxFor(Model => Model.NewInspectionCode.InspectionCodeDesc, new { @class = "form-control" })
                    <span asp-validation-for="@Model.NewInspectionCode.InspectionCodeDesc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-md" />
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2>List of Inspection Codes:</h2>
            <div class="container-fluid">
                <table class="table table-striped table-responsive">
                    <thead>
                        <tr>
                            <th>Inspection Code Id</th>
                            <th>Inspection Code Name</th>
                            <th>Inspection Code Description</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var InspectionCode in Model.InspectionCodesList)
                        {
                            <tr>
                                <td>@InspectionCode.InspectionCodeId</td>
                                <td>@InspectionCode.InspectionCodeName</td>
                                <td>@InspectionCode.InspectionCodeDesc</td>
                                <td><a asp-action="Edit" asp-route-id="@InspectionCode.InspectionCodeId">Edit</a></td>
                                <td><a asp-action="Delete" asp-route-id="@InspectionCode.InspectionCodeId" onclick='return confirm("Delete Record?");'>Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>