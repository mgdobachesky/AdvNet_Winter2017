@model SE407_Dobachesky.InspectorViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Index", "Inspector", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewInspector.InspectorFirst)
                    @Html.TextBoxFor(Model => Model.NewInspector.InspectorFirst, new { @class = "form-control" })
                    <span asp-validation-for="@Model.NewInspector.InspectorFirst" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewInspector.InspectorLast)
                    @Html.TextBoxFor(Model => Model.NewInspector.InspectorLast, new { @class = "form-control" })
                    <span asp-validation-for="@Model.NewInspector.InspectorLast" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewInspector.InspectorOrg)
                    @Html.TextBoxFor(Model => Model.NewInspector.InspectorOrg, new { @class = "form-control" })
                    <span asp-validation-for="@Model.NewInspector.InspectorOrg" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewInspector.InspectorCertEffective)
                    @Html.TextBoxFor(Model => Model.NewInspector.InspectorCertEffective, new { @class = "form-control" })
                    <span asp-validation-for="@Model.NewInspector.InspectorCertEffective" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewInspector.InspectorCertExpires)
                    @Html.TextBoxFor(Model => Model.NewInspector.InspectorCertExpires, new { @class = "form-control" })
                    <span asp-validation-for="@Model.NewInspector.InspectorCertExpires" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-md" />
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h2>List of Inspectors:</h2>
            <div class="container-fluid">
                <table class="table table-striped table-responsive">
                    <thead>
                        <tr>
                            <th>Inspector First Name</th>
                            <th>Inspector Last Name</th>
                            <th>Inspector Orginization</th>
                            <th>Inspector Certification Effective</th>
                            <th>Inspector Certification Expires</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Inspector in Model.InspectorsList)
                        {
                            <tr>
                                <td>@Inspector.InspectorFirst</td>
                                <td>@Inspector.InspectorLast</td>
                                <td>@Inspector.InspectorOrg</td>
                                <td>@Inspector.InspectorCertEffective</td>
                                <td>@Inspector.InspectorCertExpires</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>